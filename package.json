{
  "name": "message-format-inline",
  "version": "0.2.0",
  "description": "Write default messages inline. Optionally transpile translations.",
  "main": "dist/format.js",
  "bin": {
    "message-format": "bin/message-format"
  },
  "dependencies": {
    "babel-runtime": "4.4.5",
    "chalk": "0.5.1",
    "commander": "2.6.0",
    "crc32": "0.2.2",
    "glob": "4.4.0",
    "message-format": "0.1.0",
    "mkdirp": "0.5.0",
    "recast": "0.10.0",
    "source-map": "0.3.0",
    "speakingurl": "0.20.0"
  },
  "devDependencies": {
    "babel": "4.4.5",
    "babel-core": "4.4.5",
    "babel-loader": "4.0.0",
    "benchmark": "1.0.0",
    "chai": "2.1.0",
    "eslint": "0.15.0",
    "intl": "0.1.4",
    "intl-messageformat": "1.0.4",
    "istanbul": "0.3.6",
    "jscs": "1.11.3",
    "karma": "0.12.31",
    "karma-chai": "0.1.0",
    "karma-chrome-launcher": "0.1.7",
    "karma-cli": "0.0.4",
    "karma-firefox-launcher": "^0.1.4",
    "karma-mocha": "0.1.10",
    "karma-phantomjs-launcher": "0.1.4",
    "karma-safari-launcher": "0.1.1",
    "karma-sourcemap-loader": "0.3.4",
    "karma-webpack": "1.5.0",
    "mocha": "2.1.0",
    "webpack": "1.5.3"
  },
  "scripts": {
    "benchmark": "npm run benchmark-compile && babel-node --loose=all --optional=runtime scripts/benchmark.js",
    "benchmark-compile": "bin/message-format inline scripts/benchmark.src.js > scripts/benchmark.js",
    "cldr": "scripts/cldr.sh",
    "jshint": "jshint src/*.js",
    "lint": "jscs src/*.js && eslint src/*.js || true",
    "prepublish": "mkdir -p dist && cp src/*.json dist/ && babel --loose=all --optional=runtime src --out-dir dist && webpack -p",
    "test": "npm run lint && npm run test-compile && npm run test-node && npm run test-browsers",
    "test-browsers": "karma start --browsers Firefox,PhantomJS --single-run",
    "test-compile": "bin/message-format inline test/format.spec.js > test/format-inline.spec.js",
    "test-node": "istanbul cover _mocha -- -cG -R dot -r ./test/setup test/**/*.spec.js"
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/thetalecrafter/message-format-inline.git"
  },
  "author": {
    "name": "Andy VanWagoner",
    "email": "thetalecrafter@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thetalecrafter/message-format-inline/issues"
  },
  "homepage": "https://github.com/thetalecrafter/message-format-inline"
}
